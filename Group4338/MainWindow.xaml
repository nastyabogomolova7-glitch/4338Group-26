<Window x:Class="Group4338.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Инструментальные Средства Разработки Программного Обеспечения" 
        Height="700" 
        Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Студенты группы 4338"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="15" 
                   Grid.Row="0" 
                   Margin="0,10"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="10">

            <Button Content="Информация об авторе" 
                    Click="AuthorButton_Click"
                    Margin="0,0,0,10"
                    Height="40" 
                    Width="200"
                    HorizontalAlignment="Left"/>

            <Button Content="Импорт данных" 
                    Click="BtnImport_Click"
                    Margin="0,0,0,10"
                    Height="40" 
                    Width="200"
                    HorizontalAlignment="Left"/>

            <Button Content="Экспорт в Excel" 
                    Click="BtnExport_Click"
                    Margin="0,0,0,10"
                    Height="40" 
                    Width="200"
                    HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Window>