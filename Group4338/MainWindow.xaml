<Window x:Class="Group4338.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Инструментальные Средства Разработки Программного Обеспечения" 
        Height="700" 
        Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Студенты группы 4338"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="15" 
                   Grid.Row="0" 
                   Margin="0,10"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="10">

            <Button Content="Информация об авторе" 
                    Click="AuthorButton_Click"
                    Margin="0,0,0,10"
                    Height="40" 
                    Width="200"
                    HorizontalAlignment="Left"/>

            <Button Content="Импорт данных" 
                    Click="BtnImport_Click"
                    Margin="0,0,0,10"
                    Height="40" 
                    Width="200"
                    HorizontalAlignment="Left"/>

            <Button Content="Экспорт в Excel" 
                    Click="BtnExport_Click"
                    Margin="0,0,0,10"
                    Height="40" 
                    Width="200"
                    HorizontalAlignment="Left"/>

            <Separator Margin="0,10,0,10" Background="#CCCCCC" Height="2"/>

            <Button Content="Импорт JSON данных" 
                    Click="BtnImportJson_Click"
                    Margin="0,0,0,10"
                    Height="40" 
                    Width="200"
                    HorizontalAlignment="Left"
                    Background="#E3F2FD"
                    FontWeight="Medium"/>

            <Button Content="Экспорт в Word" 
                    Click="BtnExportWord_Click"
                    Margin="0,0,0,10"
                    Height="40" 
                    Width="200"
                    HorizontalAlignment="Left"
                    Background="#E8F5E9"
                    FontWeight="Medium"/>

        </StackPanel>
    </Grid>
</Window>